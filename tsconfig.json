{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "skipLibCheck": true,
    "target": "ES2022",
    "types": [
      "node"
    ],
    "useDefineForClassFields": false
  },
  "exclude": [
    "supabase/functions"
  ]
}